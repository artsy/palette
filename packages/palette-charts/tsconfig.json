{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/cjs",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "es2015",
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules/*",
    "dist/*",
    "www/*",
    "src/**/*.story.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/**/__stories__/**"
  ],
  "references": [{ "path": "../palette" }]
}
