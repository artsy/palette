{
  "presets": [
    "@babel/preset-typescript",
    ["@babel/preset-react", { "runtime": "automatic" }],
    [
      "@babel/preset-env",
      {
        "targets": {
          "chrome": "111",
          "edge": "111",
          "firefox": "111",
          "safari": "16.4"
        }
      }
    ]
  ],
  "plugins": [
    "babel-plugin-add-react-displayname",
    "babel-plugin-styled-components",
    [
      "module-resolver",
      {
        "extensions": [".ts", ".tsx"],
        "root": ["./src"]
      }
    ]
  ]
}
