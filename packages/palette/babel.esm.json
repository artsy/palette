{
  "presets": [
    "@babel/preset-typescript",
    ["@babel/preset-react", { "runtime": "automatic" }],
    [
      "@babel/preset-env",
      {
        "targets": {
          "chrome": "111",
          "edge": "111",
          "firefox": "111",
          "safari": "16.4"
        },
        "modules": false
      }
    ]
  ],
  "plugins": [
    "babel-plugin-add-react-displayname",
    "babel-plugin-styled-components",
    [
      "module-resolver",
      {
        "extensions": [".ts", ".tsx"],
        "root": ["./src"]
      }
    ]
  ],
  "ignore": [
    "**/__tests__/**",
    "**/__stories__/**",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/storybookBlocklist.ts"
  ]
}
