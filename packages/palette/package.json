{
  "name": "@artsy/palette",
  "version": "28.0.0",
  "description": "Design system library for react components",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "babel src --source-maps --extensions '.ts,.tsx' --ignore src/**/__tests__,src/**/__stories__ --out-dir dist",
    "prepack": "yarn generate-tokens && yarn generate-styles",
    "generate-tokens": "ts-node scripts/generate-tokens.ts",
    "generate-styles": "ts-node scripts/generate-styles.ts",
    "lint": "eslint --cache --cache-location '.cache/eslint/' --ext ts,tsx  --ignore-pattern 'dist'",
    "prepublishOnly": "yarn clean && yarn compile && cd ../palette-tokens && yarn compile && cd ../palette && yarn type-declarations",
    "prettier-project": "yarn prettier --write 'src/**/*.{ts,tsx}'",
    "release": "auto shipit && node scripts/clean-up-after-auto.js",
    "test": "yarn type-check && yarn jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "type-check": "tsc --noEmit --pretty",
    "type-declarations": "tsc --emitDeclarationOnly",
    "watch": "concurrently --raw --kill-others 'yarn compile -w' 'yarn type-declarations -w'",
    "storybook": "start-storybook -p 6006 --quiet",
    "build-storybook": "build-storybook",
    "visual-test": "chromatic test --exit-zero-on-changes --project-token n02zjqmdqq"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/artsy/palette.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artsy/palette/issues"
  },
  "homepage": "https://github.com/artsy/palette#readme",
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^4"
  },
  "devDependencies": {
    "@artsy/auto-config": "1.1.0",
    "@babel/cli": "7.12.16",
    "@babel/core": "7.12.16",
    "@babel/plugin-proposal-class-properties": "7.12.13",
    "@babel/plugin-proposal-json-strings": "7.12.13",
    "@babel/plugin-proposal-optional-chaining": "7.12.16",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-syntax-import-meta": "7.10.4",
    "@babel/preset-env": "7.12.16",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.12.16",
    "@storybook/addon-actions": "6.5.12",
    "@storybook/addon-links": "6.5.12",
    "@storybook/addon-viewport": "6.5.12",
    "@storybook/addons": "6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "6.5.12",
    "@types/debounce": "1.2.0",
    "@types/enzyme": "3.10.8",
    "@types/jest": "26.0.20",
    "@types/luxon": "1.15.1",
    "@types/node": "14.14.27",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@types/react-lazy-load-image-component": "1.3.0",
    "@types/react-test-renderer": "16.8.1",
    "@types/semver": "5.5.0",
    "@types/styled-components": "4.0.3",
    "@types/styled-system": "5.1.9",
    "@types/styled-system__theme-get": "5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@wojtekmaj/enzyme-adapter-react-17": "0.4.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-styled-components": "1.12.0",
    "cache-loader": "3.0.0",
    "chromatic": "5.9.2",
    "concurrently": "3.6.1",
    "enzyme": "3.9.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "1.0.0",
    "fork-ts-checker-webpack-plugin": "1.2.0",
    "husky": "2.1.0",
    "jest": "26.6.3",
    "jest-styled-components": "7.0.0-2",
    "lint-staged": "8.1.5",
    "mock-raf": "1.0.1",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-powerplug": "1.0.0",
    "react-test-renderer": "16.8.6",
    "regenerator-runtime": "0.13.5",
    "simple-progress-webpack-plugin": "1.1.2",
    "static-extend": "0.1.2",
    "storybook-states": "1.2.0",
    "styled-components": "4.3.2",
    "ts-node": "8.1.0",
    "typescript": "4.7.4",
    "typescript-styled-plugin": "0.10.0",
    "webpack": "5"
  },
  "dependencies": {
    "@artsy/palette-tokens": "^4.0.1",
    "@seznam/compose-react-refs": "^1.0.6",
    "@styled-system/theme-get": "^5.1.2",
    "lodash": "^4.17.21",
    "luxon": "^1.15",
    "proportional-scale": "^4.0.0",
    "react-lazy-load-image-component": "1.5.5",
    "react-remove-scroll": "2.5.5",
    "styled-system": "^5.1.5",
    "trunc-html": "^1.1.2",
    "use-cursor": "^1.2.3",
    "use-keyboard-list-navigation": "2.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint --fix",
      "yarn prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/*"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      ".(ts|tsx)": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/www/"
    ]
  }
}
