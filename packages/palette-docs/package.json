{
  "private": true,
  "name": "artsy-palette-docs",
  "description": "Artsy's design system",
  "version": "17.2.0",
  "scripts": {
    "build": "gatsby build",
    "clean": "rm -rf .cache && yarn start",
    "develop": "nodemon --exec \"gatsby develop\"",
    "debug": "nodemon --exec \"node --inspect-brk --no-lazy node_modules/.bin/gatsby develop\" ",
    "deploy": "yarn build && yarn gatsby-plugin-s3 deploy -y",
    "lint": "tslint -c tslint.json --project tsconfig.json --fix",
    "prettier-write": "prettier --write \"src/**/*.js\"",
    "start": "yarn develop",
    "test": "echo \"Write tests! -> https://gatsby.app/unit-testing\"",
    "type-check": "tsc --pretty --noEmit"
  },
  "workspaces": {
    "nohoist": [
      "gatsby",
      "gatsby-*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn prettier-write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".cache/*",
      "public/*",
      "src/*",
      "static/*"
    ],
    "delay": "1500"
  },
  "prettier": {
    "bracketSpacing": true,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "resolutions": {
    "docz-utils": "^0.13.6",
    "gatsby-plugin-mdx": "^2.11.0",
    "react-live": "1.12.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.123",
    "@types/react": "17.0.2",
    "@types/styled-components": "4.0.2",
    "babel-plugin-styled-components": "1.13.2",
    "gatsby-plugin-typescript": "3.11.0",
    "husky": "2.1.0",
    "lint-staged": "8.1.5",
    "netlify-cms-backend-fs": "0.4.4",
    "nodemon": "1.18.11",
    "prettier": "^2.3.2",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "4.3.5",
    "typescript-styled-plugin": "0.13.0",
    "webpack-notifier": "1.7.0",
    "webpack-shell-plugin": "0.5.0"
  },
  "dependencies": {
    "@artsy/palette": "^17.2.0",
    "@babel/core": "^7.15.0",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@reach/router": "^1.2.1",
    "@styled-system/theme-get": "^5.1.2",
    "babel-preset-gatsby": "^1.11.0",
    "d3-ease": "^1.0.5",
    "docz-utils": "^0.13.6",
    "gatsby": "3.11.0",
    "gatsby-image": "^3.11.0",
    "gatsby-plugin-catch-links": "^3.11.0",
    "gatsby-plugin-force-trailing-slashes": "^1.0.4",
    "gatsby-plugin-manifest": "^3.11.0",
    "gatsby-plugin-mdx": "^2.11.0",
    "gatsby-plugin-offline": "^4.11.0",
    "gatsby-plugin-react-helmet": "^4.11.0",
    "gatsby-plugin-s3": "^0.3.2",
    "gatsby-plugin-sharp": "^3.11.0",
    "gatsby-plugin-sitemap": "^4.7.0",
    "gatsby-plugin-styled-components": "^4.11.0",
    "gatsby-remark-autolink-headers": "^4.8.0",
    "gatsby-remark-prismjs": "^5.8.0",
    "gatsby-source-filesystem": "^3.11.0",
    "gatsby-transformer-sharp": "^3.11.0",
    "github-slugger": "^1.3.0",
    "hast-util-to-string": "^2.0.0",
    "lodash": "^4.17.11",
    "marked": "^2.1.3",
    "prismjs": "^1.24.1",
    "prop-types": "^15.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.2.0",
    "react-live": "1.12.0",
    "react-powerplug": "^1.0.0",
    "scroll-into-view-if-needed": "^2.2.28",
    "styled-components": "^5.3.0",
    "unstated": "^2.1.1"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artsy/palette"
  },
  "bugs": {
    "url": "https://github.com/artsy/palette/issues"
  },
  "authors": [
    "Christopher Pappas <damassi.pappas@gmail.com",
    "Art.sy Inc"
  ],
  "keywords": [
    "palette",
    "artsy",
    "design system",
    "styled-system",
    "styled-components",
    "typescript"
  ]
}
