{
  "name": "@artsy/palette",
  "description": "Artsy's design system",
  "version": "0.1.0",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "lint": "tslint -c tslint.json --project tsconfig.json --fix",
    "prettier-write": "prettier --write \"src/**/*.js\"",
    "release": "auto shipit",
    "start": "yarn develop",
    "test": "echo \"Write tests! -> https://gatsby.app/unit-testing\"",
    "type-check": "tsc --pretty --noEmit"
  },
  "resolutions": {
    "@types/react": "16.4.13"
  },
  "devDependencies": {
    "@types/react": "16.4.13",
    "@types/styled-components": "^3.0.0",
    "auto-release-cli": "2.2.0",
    "gatsby-plugin-typescript": "^2.0.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "tslint": "^5.12.0",
    "typescript": "^3.0.3",
    "typescript-styled-plugin": "^0.13.0",
    "webpack-notifier": "^1.7.0"
  },
  "dependencies": {
    "@artsy/palette": "2.24.3",
    "babel-plugin-styled-components": "^1.10.0",
    "gatsby": "^2.0.76",
    "gatsby-image": "^2.0.20",
    "gatsby-plugin-manifest": "^2.0.9",
    "gatsby-plugin-offline": "^2.0.16",
    "gatsby-plugin-sharp": "^2.0.14",
    "gatsby-plugin-styled-components": "^3.0.4",
    "gatsby-source-filesystem": "^2.0.8",
    "gatsby-transformer-sharp": "^2.1.8",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-head": "^3.0.2",
    "styled-components": "^3.4.5",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn prettier-write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gatsbyjs/gatsby-starter-default"
  },
  "bugs": {
    "url": "https://github.com/gatsbyjs/gatsby/issues"
  },
  "authors": [
    "Christopher Pappas <damassi.pappas@gmail.com",
    "Art.sy Inc"
  ],
  "keywords": [
    "palette",
    "artsy",
    "design system",
    "styled-system"
  ]
}
